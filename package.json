{
  "name": "kitsu-api-docs",
  "version": "1.0.0",
  "license": "Apache-2.0",
  "private": true,
  "scripts": {
    "del": "del apiary.apib",
    "build": "hercule blueprint/kitsu.apib -o apiary.apib -c",
    "build-html": "snowboard html -o docs -c tools/snowboard.config.yml apiary.apib",
    "validate": "node tools/validate",
    "test": "run-s del build validate",
    "snow": "snowboard http apiary.apib -c tools/snowboard.config.yml --watch",
    "start": "yarn test && yarn snow"
  },
  "dependencies": {
    "chalk": "~3.0.0",
    "del-cli": "~3.0.0",
    "drafter.js": "~3.0.2",
    "hercule": "~4.1.1",
    "npm-run-all": "~4.1.5"
  },
  "devDependencies": {
    "snowboard": "^3.5.7"
  }
}
